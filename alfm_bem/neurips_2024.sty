% neurips_2024.sty - Minimal NeurIPS 2024 compatible style
% Based on NeurIPS formatting guidelines

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2024}[2024/01/01 NeurIPS 2024 Style]

% Options
\newif\if@final\@finalfalse
\DeclareOption{final}{\@finaltrue}
\DeclareOption{preprint}{\@finalfalse}
\ProcessOptions\relax

% Page geometry
\RequirePackage[
  textwidth=5.5in,
  textheight=9in,
  top=1in,
  left=1.5in
]{geometry}

% Fonts
\RequirePackage{times}

% Natbib for citations
\RequirePackage{natbib}
\setcitestyle{authoryear,round}

% Section formatting
\RequirePackage{titlesec}
\titleformat{\section}{\large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalsize\itshape}{\thesubsubsection}{1em}{}

% Abstract formatting
\renewenvironment{abstract}{%
  \centerline{\large\bfseries Abstract}%
  \vspace{0.5em}%
  \begin{quote}%
}{%
  \end{quote}%
}

% Title formatting  
\renewcommand{\maketitle}{%
  \begin{center}%
    {\LARGE\bfseries \@title \par}%
    \vspace{1em}%
    {\large \@author \par}%
    \vspace{1em}%
  \end{center}%
}

% Line numbers for review (disabled in final)
\if@final
  % Final version - no line numbers
\else
  \RequirePackage{lineno}
  \linenumbers
\fi

% Hyperref setup
\RequirePackage{hyperref}
\hypersetup{
  colorlinks=true,
  linkcolor=blue,
  citecolor=blue,
  urlcolor=blue
}

\endinput
